{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "types": ["vite/client"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    "skipLibCheck": true,
    "noEmit": true,

    /* 임시 완화 (필요시 이후 강화) */
    "strict": true,
    "noImplicitAny": false
  },
  "include": ["src", "vite-env.d.ts", "src/shims.d.ts"]
}